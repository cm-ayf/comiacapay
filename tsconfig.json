{
  "extends": ["@tsconfig/strictest", "@tsconfig/remix"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app/pigment.d.ts",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx"
  ],
  "compilerOptions": {
    "lib": ["ES2022"],
    "types": ["vite/client"],
    "target": "ES2022",
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    }
  }
}
